@inherits DitFlo.Web.Mvc.DitFloView<DitFlo.ViewModels.FeaturedNewsViewModel>
@{
    
}

<!-- Blog -->
<section class="is-blog">
    <h2 class="major"><span>@Model.View.Archive.Title</span></h2>
    <div>
        <div class="row">
            <div class="9u">
                <div class="content content-left">
                    <!-- Featured Post -->
                    <article class="is-post">
                        <header>
                            <h3><a href="@Model.View.FeaturedNews.Url">@Model.View.FeaturedNews.Title</a></h3>
                            <span class="byline">@Model.View.FeaturedNews.SubTitle</span>
                            <ul class="meta">
                                <li class="timestamp">@(Model.View.FeaturedNews.Date.ToString("f"))</li>
                            </ul>
                        </header>

                        @if (Model.View.FeaturedNews.Image.IsNullOrWhiteSpace())
                        {
                            <a href="@Model.View.FeaturedNews.Url" class="image image-full"><img src="@Model.View.FeaturedNews.Image" alt="" /></a>
                        }

                        <p>@Model.View.FeaturedNews.Extract</p>

                        <a href="@Model.View.FeaturedNews.Url" class="button">Continue Reading</a>
                    </article>
                    <!-- /Featured Post -->
                </div>
            </div>
            <div class="3u">
                <div class="sidebar">
                    @{ Html.RenderPartial("umbLatestNewsWidget"); }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /Blog -->